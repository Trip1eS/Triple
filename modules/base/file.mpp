module;
#include <filesystem>
#include <fstream>
#include <sstream>

export module triple.base:file;

namespace triple {

export std::string read_file_str(const std::filesystem::path& path) {
    std::fstream in_file(path);
    std::stringstream ss;
    ss << in_file.rdbuf();
    return ss.str();
}

} // namespace triple
